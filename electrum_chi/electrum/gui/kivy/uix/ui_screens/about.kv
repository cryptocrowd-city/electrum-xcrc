#:import VERSION electrum.version.ELECTRUM_VERSION

Popup:
    title: _("About Electrum-NMC")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "GNU GPLv3+ Licence for Electrum-DOGE components; MIT Licence for all other components"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://xaya.io/[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://www.xaya.io/")
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by The XAYA Project')
            padding: '0dp', '20dp'
        TopLabel:
            text: _('Based on Electrum-Namecoin')
            padding: '0dp', '20dp'
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()